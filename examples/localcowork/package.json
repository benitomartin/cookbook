{
  "name": "localcowork",
  "version": "0.1.0",
  "private": true,
  "description": "LocalCowork â€” on-device AI agent desktop app",
  "type": "module",
  "workspaces": [
    "src",
    "mcp-servers/filesystem",
    "mcp-servers/calendar",
    "mcp-servers/email",
    "mcp-servers/task",
    "mcp-servers/data",
    "mcp-servers/audit",
    "mcp-servers/clipboard",
    "mcp-servers/system",
    "mcp-servers/system-settings",
    "mcp-servers/_shared/ts"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint src/ mcp-servers/*/src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ mcp-servers/*/src/ --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"mcp-servers/*/src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:model-behavior": "vitest run --config vitest.model.config.ts",
    "validate:servers": "./scripts/validate-mcp-servers.sh"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.0.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^5.1.4",
    "eslint": "^8.57.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0",
    "vite": "^5.2.0",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "zustand": "^4.5.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
